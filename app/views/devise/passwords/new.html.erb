<section class="module" id="signin">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <h2 class="module-title font-alt">Forgot your password?</h2>
        <div class="module-subtitle font-serif"></div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :email, class: 'sr-only' %><br/>
            <%= f.email_field :email, class: 'form-control', :placeholder => 'Your Email*' %>
            <p class="help-block text-danger"></p>
          </div>

          <div class="text-center form-group" style="padding-top: 15px">
            <%= f.submit 'Send me reset password instructions', class: 'btn btn-block btn-round btn-d', id: 'reset-password' %>
          </div>
        <% end %>

        <div class="ajax-response font-alt" id="contactFormResponse"></div>

        <div class="form-group">
          <%= render "devise/shared/links" %>
        </div>

      </div>
    </div>
  </div>
</section>




